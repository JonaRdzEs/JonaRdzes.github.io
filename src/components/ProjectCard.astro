---
import type { Project } from "@types";
import IconLink from "./IconLink.astro";
import Code from "@components/icons/Code.astro";
import Link from "@components/icons/Link.astro";

type Props = Project;

const { title, image, description, sourceCodeUrl, url } = Astro.props;
---

<section class="bg-cosmic-silver/25 rounded-md p-4">
  <img src={image} class="w-full h-24 rounded-md object-cover" />
  <h2 class="text-base font-extrabold text-celestial-white my-2">{title}</h2>
  <p class="text-sm text-stellar-silver">{description}</p>
  <div class="flex justify-end items-center gap-2 mt-3">
    <IconLink href={sourceCodeUrl}>
      <Code />
    </IconLink>
    <IconLink href={url}>
      <Link />
    </IconLink>
  </div> 
</section>